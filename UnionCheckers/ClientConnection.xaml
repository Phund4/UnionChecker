<Window x:Class="UnionCheckers.ClientConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnionCheckers"
        mc:Ignorable="d"
        Title="ClientConnection" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите IP" VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center" Margin="10"></TextBlock>
        <TextBox x:Name="TextBoxIP" Grid.Row="1" VerticalAlignment="Top"></TextBox>
        <Button Grid.Row="1" Content="Готово" VerticalAlignment="Center" 
                HorizontalAlignment="Center" Background="AntiqueWhite" 
                Foreground="Crimson" Click="SendIP_Click"></Button>
    </Grid>
</Window>
